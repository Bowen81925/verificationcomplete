<script>
  function redirectUser() {
    // Get raw query string to avoid URLSearchParams decoding + as space
    const raw = window.location.search;
    const match = raw.match(/[?&]ID=([^&]*)/);
    if (match) {
      // Replace + with /
      const url = 'https://' + match[1].replace(/\+/g, '/');
      window.location.href = url;
    } else {
      alert('No redirect URL specified.');
    }
  }
</script>

